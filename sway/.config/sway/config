      bindsym a exec atom, mode "default"
      bindsym e exec dolphin, mode "default"
      bindsym f exec firefox, mode "default"
      bindsym c exec google-chrome, mode "default"
      bindsym v exec vlc mode "default"
      bindsym b exec qbittorrent, mode "default"

      # Back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
}

# Screenshot mode
set $mode_screenshot 'Screenshot - se[l]ect,f[u]ll'
# Hint: code 33 odiaeresis (Altgr+p)
bindcode $altgr+33 mode "$mode_screenshot"
mode "$mode_screenshot" {
      # Screenshot from the focused monitor under Sway, using swaymsg and jq
      bindsym --release u exec --no-startup-id "grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') $screenshot_dir/screenshot_full_$(date '+%Y%m%d_%H%M%S').png", mode "default"
      # Select a region and screenshoot:
      bindsym --release l exec --no-startup-id "grim -g "$(slurp)" $screenshot_dir/screenshot_slct_$(date '+%Y%m%d_%H%M%S').png", mode "default"

      # Back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
}

# Lock screen
set $lock 'swaylock -f -c 000000'
bindsym $sup+Ctrl+l exec $lock

# System status mode
set $mode_system 'System [l]ock,l[o]gout,[s]uspend,[h]ibernate,[r]eboot,[p]oweroff'
bindsym $altgr+BackSpace mode "$mode_system"
mode "$mode_system" {
      bindsym l exec --no-startup-id $lock, mode "default"
      bindsym o exec --no-startup-id 'swaymsg exit', mode "default"
      bindsym s exec --no-startup-id $lock && systemctl suspend mode "default"
      bindsym h exec --no-startup-id $lock && systemctl hibernate, mode "default"
      bindsym r exec --no-startup-id systemctl reboot, mode "default"
      bindsym p exec --no-startup-id systemctl poweroff, mode "default"

      # Back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
}

