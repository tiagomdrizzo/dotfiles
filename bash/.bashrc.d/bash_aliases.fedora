# ~/.bashrc.d/bash_aliases.fedora
#
# DNF alias
alias dnfi='sudo dnf install'
alias dnfu='sudo dnf upgrade -y --refresh'
alias dnfs='dnf search'
alias dnfr='sudo dnf remove'

# Flatpak alias
alias fpku='flatpak --user '
alias fpkui='flatpak --user install '
alias fpkur='flatpak --user uninstall '
alias fpkuls='flatpak --user list '
alias fpkurl='flatpak --user remote-ls '
alias fpkurun='flatpak --user runi '

# Quick python HTTP Server
alias pyhttp='python -m SimpleHTTPServer 8000'
